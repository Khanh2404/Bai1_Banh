<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView
        android:textColor="#03A9F4"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Choose your cake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCloss"
        />
    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="#03A9F4"
            android:id="@+id/txtSoLuongBanh"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng bánh"
            />
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgBanh"
            android:src="@drawable/cake1"
            android:layout_width="250dp"
            android:layout_height="150dp"
            />
        <TextView
            android:textColor="#03A9F4"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá tiền:"
            android:id="@+id/txtGiaTien"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="180dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/txtItems"
                android:textColorHint="#03A9F4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Bạn có 0 mặt hàng"
                />
            <TextView
                android:id="@+id/txtTongTien"
                android:textColor="#03A9F4"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng tiền: "
                />
    </LinearLayout>
</LinearLayout>